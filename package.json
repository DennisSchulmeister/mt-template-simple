{
    "name": "mt-template-simple",
    "version": "1.0.1",
    "description": "mini-tutorial.js template project",
    "author": "Dennis Schulmeister-Zimolong",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/DennisSchulmeister/mt-template-simple",
    "bugs": {
        "url": "https://github.com/DennisSchulmeister/mt-template-simple/issues"
    },
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/DennisSchulmeister/mt-template-simple.git"
    },
    "keywords": [
        "mini-tutorial.js",
        "template",
        "documentation",
        "manual"
    ],
    "scripts": {
        "clean": "node scripts/clean.js",
        "build": "npm run clean; parcel build src/*.html --public-url . --detailed-report --experimental-scope-hoisting",
        "watch": "npm run clean; parcel watch src/*.html --public-url . --detailed-report --experimental-scope-hoisting",
        "start": "parcel src/index.html --open"
    },
    "devDependencies": {
        "mini-tutorial.js": "^1.0.0",
        "parcel-bundler": "^1.9.7",
        "shelljs": "^0.7.8"
    }
}
